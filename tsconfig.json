{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@infogata"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
