{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "paths": {
      "~/*": ["./src/*"],
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@infogata"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
